{
  "name": "gamemakerbot",
  "version": "2.0.0",
  "description": "The bot used by the /r/GameMaker Discord server.",
  "scripts": {
    "start": "npm run build:dev && node --enable-source-maps dist/index.js --development",
    "build:dev": "npm run build -- --development",
    "build": "node ./tools/esbuild.js",
    "prod": "npm run build && node dist/index.js",
    "docs:cache": "node ./tools/cache-docs.js"
  },
  "type": "module",
  "keywords": [
    "discord",
    "bot",
    "client",
    "node",
    "discordapp"
  ],
  "author": "Topher Anselmo <christopherwk210@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@discordjs/rest": "^1.1.0",
    "@discordjs/voice": "^0.11.0",
    "axios": "^0.27.2",
    "bufferutil": "^4.0.6",
    "cheerio": "^1.0.0-rc.12",
    "discord.js": "^14.3.0",
    "dotenv": "^16.0.2",
    "erlpack": "github:discord/erlpack",
    "exec-buffer": "^3.2.0",
    "gifsicle": "^7.0.1",
    "glob": "^8.0.3",
    "jimp": "^0.16.2",
    "sequelize": "^6.23.0",
    "sqlite3": "^5.1.1",
    "utf-8-validate": "^5.0.9",
    "zlib-sync": "^0.1.7"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "devDependencies": {
    "@types/gifsicle": "^5.2.0",
    "@types/glob": "^8.0.0",
    "@types/node": "^18.7.18",
    "cli-progress": "^3.11.2",
    "esbuild": "^0.15.9",
    "esbuild-copy-static-files": "^0.1.0",
    "find-up": "^6.3.0",
    "strip-json-comments": "^5.0.0",
    "tsc-alias": "^1.7.0",
    "typescript": "^4.8.4"
  }
}
